package {
    default_applicable_licenses: ["external_wpa_supplicant_8_license"],
}

// See: http://go/android-license-faq
license {
    name: "external_wpa_supplicant_8_license",
    visibility: ["//visibility:public"],
    license_kinds: [
        "SPDX-license-identifier-BSD-3-Clause",
    ],
    license_text: ["LICENSE"],
}

cc_library_headers {
    name: "libnetlink_iface_headers",
    vendor_available: true,
    export_include_dirs: [
        "src/drivers",
    ],
}

cc_defaults {
    name: "wpa_supplicant_cflags_default",
}

cc_fuzz {
    name: "mainline_supplicant_service_fuzzer",
}

prebuilt_etc {
    name: "mainline_supplicant_conf",
    src: "empty",
    filename: "mainline_supplicant.conf",
    installable: false,
}

prebuilt_etc {
    name: "mainline_supplicant_rc",
    src: "empty",
    filename: "mainline_supplicant.rc",
    installable: false,
}

prebuilt_etc {
    name: "android.hardware.wifi.supplicant.xml.prebuilt",
    src: "empty",
    filename: "android.hardware.wifi.supplicant.xml",
    installable: false,
}

prebuilt_etc {
    name: "android.hardware.wifi.hostapd.xml.prebuilt",
    src: "empty",
    filename: "android.hardware.wifi.hostapd.xml",
    installable: false,
}
